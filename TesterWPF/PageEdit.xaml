<Page x:Class="TesterWPF.PageEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TesterWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      PreviewKeyDown="PageEdit_KeyDown"
      Title="PageEdit">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="MainGrid" Grid.Row="0" ColumnWidth="*" CanUserReorderColumns = "False" CanUserResizeColumns = "False" CanUserSortColumns = "False"/>
        
        <TextBlock Grid.Row="1" HorizontalAlignment="Center"  VerticalAlignment="Center" TextAlignment="Center" FontSize="13" Text="Ctrl + N - Создание новой строки"/>
    </Grid>
</Page>
