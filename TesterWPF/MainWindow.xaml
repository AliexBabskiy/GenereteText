<Window x:Class="TesterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesterWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Test" Height="450" Width="250">
    <Grid x:Name="MainWind">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="TestButton"  Content="Пройти тест" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="180" FontSize="16" FontWeight="Bold" Click="Test_Click"/>

        <Button x:Name="Bt_EditTest" Grid.Row="1" Content="Изменить тест" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="200" FontWeight="Bold" FontSize="16" Click="EditTest_Click"/>
    </Grid>
</Window>
